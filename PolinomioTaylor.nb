
x = Pi/3;  
N = 10;   

PolinomioTaylorCos[x_, N_] := Sum[(-1)^n * x^(2 n) / Factorial[2 n], {n, 0, N}]

taylorAprox = PolinomioTaylorCos[x, N];

Print["Aproximación de Cos[", x, "] con ", N, " términos: ", N[taylorAprox]];

Print["Valor real de Cos[", x, "]: ", N[Cos[x]]];

